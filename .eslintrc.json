{
  "extends": "strongloop",
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "env": {
    "es6": true
  },
  "rules": {
    "max-len": [
      2,
      120,
      8
    ],
    "strict": "off"
  },
  "overrides": [
    {
      "files": [
        "**/*.test.js"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}